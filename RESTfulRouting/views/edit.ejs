<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    
    <div class="ui huge header">Edit Post</div>
    
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Blog's title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" placeholder="Blog's content" required><%- blog.body %></textarea>
        </div>
        <button type="sumbit" class="ui orange big basic button">Update</button>
    </form>
    
</div>

<% include ./partials/footer.ejs %>